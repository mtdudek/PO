class Fixnum
  def czynniki
    arry1=Array.new()
    1.upto(self) do |x|
      if self%x==0
        arry1.push(x)
      end
    end
    arry1
  end
  def ack(m)
    if self == 0
      m+1
    elsif m==0
      (self -1).ack(1)
    else
      (self -1).ack(self.ack(m-1))
    end 
  end
  def doskonala
    dzi=Array.new()
    dzi=self.czynniki
    dzi.pop
    i=0
    dzi.each{|x| i+=x}
    i == self
  end
